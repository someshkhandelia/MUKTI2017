<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.somesh1995.mukti2017_2.Home3">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="&lt;&lt;&lt;   Keynote >>> "
                    android:id="@+id/workshops_title"
                    android:layout_gravity="center"
                    android:textColor="#D3D3D3"
                    android:gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:textAllCaps="true"/>

            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/workshop3"
                android:id="@+id/workshops_image_button"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView style="?android:textAppearanceSmall"
                    android:textColor="#80ffffff"
                    android:text="Every year we have an eminent personality delivering the keynote speech. This event helps the young minds to interact with some well known entrepreneurs and people in the tech industry.This is a great opportunity to know what is actually needed to make it big in the industry."
                    android:lineSpacingMultiplier="1.2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-light"/>



            </LinearLayout>






        </LinearLayout>
    </ScrollView>



</FrameLayout>
