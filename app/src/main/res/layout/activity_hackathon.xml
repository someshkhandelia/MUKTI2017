<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.somesh1995.mukti2017_2.Hackathon"
        android:background="@drawable/mappbg"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/hackathon_title_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Hackathon"
                android:id="@+id/hackathon_title"
                android:layout_gravity="center"
                android:textColor="#D3D3D3"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                android:textAllCaps="true"/>

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hackathon_activity"
            android:layout_below="@+id/hackathon_title_layout"
            android:id="@+id/hackathon_activity_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hackathon_body"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:textColor="#D3D3D3"
            android:textAlignment="center"
            android:text="To enrich your technical skills and test your power of logic and problem solving, Mukti  2017 brings  you, “ Hackathon” ,an eight hour long event which will consist of tasks, that you need to solve within the  stipulated time in groups of maximum three people . You can use any technology or framework to complete the given tasks.
 Internet connection for this event will be provided by GLUG, hence all you need to bring for this event is a fully charged laptop and your passion to conquer challenges. Refreshments will be provided by the club."
            android:layout_marginTop="20dp"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#D3D3D3"
            android:background="#373839"
            android:id="@+id/call_button"
            android:layout_marginTop="30dp"
            android:layout_gravity="bottom"
            />

    </LinearLayout>

</ScrollView>
