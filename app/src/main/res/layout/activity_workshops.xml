<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wizard5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/mainlayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/heading_workshops"
                android:background="#000000"
                android:alpha="0.3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Workshops"
                    android:id="@+id/workshops_text"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>

            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/ethic"
                android:scaleType="centerCrop"
                android:id="@+id/thumb_button_1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#000000"
                android:alpha="0.5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ethical Hacking"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/android"
                android:scaleType="centerCrop"
                android:id="@+id/thumb_button_2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#000000"
                android:alpha="0.5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Android App Dev."
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/webdev"
                android:scaleType="centerCrop"
                android:id="@+id/thumb_button_3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#000000"
                android:alpha="0.5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Web Development"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/hackme"
                android:scaleType="centerCrop"
                android:id="@+id/thumb_button_4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#000000"
                android:alpha="0.5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hack.Me"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>




    <!-- This initially-hidden ImageView will hold the expanded/zoomed version of
         the images above. Without transformations applied, it takes up the entire
         screen. To achieve the "zoom" animation, this view's bounds are animated
         from the bounds of the thumbnail button above, to its final laid-out
         bounds.
         -->



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/mylayout11">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/ethic"
                android:visibility="invisible"
                android:id="@+id/expanded_image"
                android:scaleType="centerCrop"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:alpha="0.8"
                android:id="@+id/mylayout"
                android:visibility="invisible"
                android:layout_marginTop="10dp">

                <TextView style="?android:textAppearanceSmall"
                    android:textColor="#80ffffff"
                    android:textStyle="bold"
                    android:text="@string/Androidworkshopnotice"
                    android:lineSpacingMultiplier="1.2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:id="@+id/mytext"
                    android:visibility="invisible"/>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/mylayout22">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/android"
                android:visibility="invisible"
                android:id="@+id/expanded_image2"
                android:scaleType="centerCrop"
                />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:alpha="0.8"
                    android:id="@+id/mylayout2"
                    android:visibility="invisible"
                    android:layout_marginTop="10dp">

                    <TextView style="?android:textAppearanceSmall"
                        android:textColor="#80ffffff"
                        android:textStyle="bold"
                        android:text="@string/Androidworkshopnotice"
                        android:lineSpacingMultiplier="1.2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:id="@+id/mytext2"
                        android:visibility="invisible"/>


                </LinearLayout>


        </LinearLayout>


    </ScrollView>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/mylayout33">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/webdev"
                android:visibility="invisible"
                android:id="@+id/expanded_image3"
                android:scaleType="centerCrop"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:alpha="0.8"
                android:id="@+id/mylayout3"
                android:visibility="invisible"
                android:layout_marginTop="10dp">

                <TextView style="?android:textAppearanceSmall"
                    android:textColor="#80ffffff"
                    android:textStyle="bold"
                    android:text="@string/webdevworkshopnotice"
                    android:lineSpacingMultiplier="1.2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:id="@+id/mytext3"
                    android:visibility="invisible"/>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/mylayout44">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/hackme"
                android:visibility="invisible"
                android:id="@+id/expanded_image4"
                android:scaleType="centerCrop"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:alpha="0.8"
                android:id="@+id/mylayout4"
                android:visibility="invisible"
                android:layout_marginTop="10dp">

                <TextView style="?android:textAppearanceSmall"
                    android:textColor="#80ffffff"
                    android:textStyle="bold"
                    android:text="@string/hackmeworkshopnotice"
                    android:lineSpacingMultiplier="1.2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:id="@+id/mytext4"
                    android:visibility="invisible"/>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>



</FrameLayout>
